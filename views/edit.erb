<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html lang="EN" dir="ltr" xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="content-type" content="text/xml; charset=utf-8" />
    <title>divSpan.html</title>
    <link rel = "stylesheet"
			type = "text/css"
			href = "test1.css"/>
  </head>
  
  <body>

	<fieldset id = "header">
	  <form action="/mySites" method="GET">  
		<input type = "submit" name="mySites" id="b4" value="My Sites"/>
         </form>
	  <form action="/edit" method="GET">
		<input type = "submit" name="edit" id="b2" value="Edit Sites"/>
         </form>
	  <form action="/customize" method="POST">
		<input type = "submit" name="customize" id="b3" value="Customize Sites"/>
         </form>
	   <form action="aboutUs.html">
		<input type = "submit" name="about" id = "b1" value="About Us"/> 		
	  </form>
	  <form action="/help" method="POST">
		<input type = "submit" name="help" id="b5" value="Help"/>
         </form>
	</fieldset>

	<fieldset id="body">	
	   	<div id="leftBody">
		   <%$suggestedLinks.each do |k, v|%>	   		 
		   	<form action="addURL" method="POST">
			   <fieldset>
			   <strong><%=$suggestedLinks[k]%></strong>
			   <input type="hidden" name="hiddenURL" id="hiddenURL" value="<%=$suggestedLinks.index(v)%>"/>
			   <input type="hidden" name="siteName" value="<%=$suggestedLinks[k]%>"/>
			   <input type="submit" name="addSuggestedURL" value="Add" id="addSuggestedURL"/>
			   </fieldset>			
		      </form>
			
		   <%end%>
		   <%$toBeDeletedLinksHash.each do |k, v|%>	   		 
		   	<form action="removeURL" method="POST">
			   <fieldset>
			   <strong><%=$toBeDeletedLinksHash[k]%></strong>
			   <input type="hidden" name="hiddenURL" id="hiddenURL" value="<%=$toBeDeletedLinksHash.index(v)%>"/>
			   <input type="hidden" name="siteName" value="<%=$toBeDeletedLinksHash[k]%>"/>
			   <input type="submit" name="removeURL" value="Remove" id="removeURL"/>
			   </fieldset>			
		      </form>
		   <%end%>
		</div>	
		<div id="rightBody">
		   <form action="addURL" method="POST">
			Don't see what you like? Enter your site name and URL
			<p>
			<label>Site Name</lable>
			<input type="text" name="siteName" value=""/>
			</p>
			<p>
    			<label>URL</lable>
			<input type="text" size="25" name="myURL" id="myURL" value="http://"/>
			<input type="submit" name="add" value="Add" id="addURL"/>
			</p>	
					
		   </form>
		</div>
	</fieldset>	
	
  </body>
</html>
